package trabalho;

public class Lista {
	private No prim;
	private int nElem;

	public Lista() {
		this.prim = null;
		this.nElem = 0;
	}

	public void insere(Promissoria elem) {
		No novoNo = new No(elem);
		novoNo.setProx(this.prim);
		this.prim = novoNo;
		this.nElem++;
	}

	public int getnElem() {
		return this.nElem;
	}
	
	s

	public Lista pesquisaPagas() {
		Lista pagas = new Lista();
		No atual = this.prim;
		do {
			if (atual.getPromissoria().Pago)
				pagas.insere(atual.getPromissoria());

			atual = atual.getProx();
		} while (atual != null);

		return pagas;
	}

	public Lista pesquisaNaoPagas() {
		Lista pagas = new Lista();
		No atual = this.prim;
		do {
			if (!atual.getPromissoria().Pago)
				pagas.insere(atual.getPromissoria());

			atual = atual.getProx();
		} while (atual != null);

		return pagas;
	}

	public No getPrimeiro() {
		return this.prim;
	}
}

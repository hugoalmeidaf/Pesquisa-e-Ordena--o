package trabalho;

import estruturas.Promissoria;

public class TabelaHashing {
	private Promissoria[] vetor;
	private int nElem;

	public TabelaHashing() {
		this.vetor = null;
		this.nElem = 0;
	}

	private int calculaTamanho(int qtd) {
		int tamanho = qtd + 1;
		while (!éPrimo(tamanho)) {
			tamanho++;			
		}
		
		return tamanho;
	}

	private Boolean éPrimo(int numero) {
		// se o número é par, não pode ser primo
		if (numero % 2 == 0) {
			return false;
		}
		// verificar se este número ímpar é primo
		for (long i = 3; i * i <= numero; i += 2) {
			if (numero % i == 0) {
				return false;
			}
		}
		return true;
	}
}

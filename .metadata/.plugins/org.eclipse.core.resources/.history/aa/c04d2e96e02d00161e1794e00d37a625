package trabalho;

import estruturas.Promissoria;
import utilitarios.Numero;

public class TabelaHashing {
	private Promissoria[] vetor;
	private int nElem;

	public TabelaHashing(int quantidade) {
		this.vetor = new Promissoria[calculaTamanho(quantidade)];
		this.nElem = 0;
	}

	private int calculaTamanho(int qtd) {
		int tamanho = qtd + 1;
		while (!Numero.ÈPrimo(tamanho)) {
			tamanho++;
		}

		return tamanho;
	}

	public int qtd() {
		return this.vetor.length;
	}
}
